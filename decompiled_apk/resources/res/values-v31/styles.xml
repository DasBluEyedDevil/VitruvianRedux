<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.SplashScreen" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="android:enforceNavigationBarContrast">true</item>
        <item name="isLightTheme">?android:attr/isLightTheme</item>
    </style>
    <style name="Theme.App.Starting" parent="@style/Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.VitruvianProjectPhoenix</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
    </style>
    <style name="Theme.SplashScreen" parent="@style/Base.Theme.SplashScreen.DayNight">
        <item name="?0x101062c">?attr/windowSplashScreenBackground</item>
        <item name="?0x101062d">?attr/windowSplashScreenAnimatedIcon</item>
        <item name="?0x101062e">?attr/windowSplashScreenAnimationDuration</item>
    </style>
    <style name="Theme.SplashScreen.IconBackground" parent="@style/Theme.SplashScreen">
        <item name="?0x1010630">?attr/windowSplashScreenIconBackgroundColor</item>
    </style>
</resources>
