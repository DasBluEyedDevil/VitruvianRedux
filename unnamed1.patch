+            Result.success(Unit)
+        } catch (e: Exception) {
+            Timber.e(e, "Failed to delete PR")
+            Result.failure(e)
+        }
+    }
+    
+    /**
+     * Delete all PRs
+     */
+    suspend fun deleteAllPRs(): Result<Unit> {
+        return try {
+            personalRecordDao.deleteAllPRs()
